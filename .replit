entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["exiftool", "freetype", "ghostscript", "glibcLocales", "gumbo", "harfbuzz", "imagemagickBig", "jbig2dec", "libjpeg_turbo", "mupdf", "netpbm", "openjpeg", "poppler_utils", "swig", "xcbuild"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 81
externalPort = 3000

[[ports]]
